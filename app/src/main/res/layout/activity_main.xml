<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5886B02"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="423dp"
        android:layout_height="551dp"
        android:background="@null"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_bawah" />

    <ImageButton
        android:id="@+id/btnGas"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnInfo"
        app:srcCompat="@drawable/logo_gas" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="128dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/btnExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_info" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="150dp"
        android:layout_height="61dp"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_exit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="389dp"
        android:layout_height="393dp"
        android:layout_marginEnd="80dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bg_wayang_back"
        tools:layout_editor_absoluteY="-40dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="246dp"
        android:layout_height="393dp"
        android:layout_marginEnd="-32dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bg_wayang_top"
        tools:layout_editor_absoluteY="-20dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="344dp"
        android:layout_height="253dp"
        android:layout_marginTop="180dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/btnGas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_quiz"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>